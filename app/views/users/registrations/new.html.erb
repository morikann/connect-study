<h4 class="center-align signup-title">アカウント登録</h4>

<div class="row">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="input-field col s12">
      <i class="material-icons prefix">account_circle</i>
      <%= f.text_field :username, autocomplete: 'name', id: 'user_username' %>
      <%= f.label :username %>
    </div>

    <div class="input-field col s12">
      <i class="material-icons prefix">mail</i>
      <%= f.text_field :email, autocomplete: 'email', id: 'user_email' %>
      <%= f.label :email %>
    </div>

    <div class="input-field col s12">
      <i class="material-icons prefix">lock</i>
      <%= f.password_field :password, id: 'user_password' %>
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(英数字 <%= @minimum_password_length %>文字以上)</em>
      <% end %><br />
    </div>

    <div class="input-field col s12">
      <i class="material-icons prefix">lock</i>
      <%= f.password_field :password_confirmation, id: 'user_password_confirmation' %>
      <%= f.label :password_confirmation %>    
    </div>

    <%
=begin%>
 <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div> 
<%
=end%>
    <div class="center-align">
      <button class="btn waves-effect waves-light">
        <%= f.submit 'アカウント登録', class: 'submit-btn' %>
        <i class="material-icons right">send</i>
      </button>
    </div>
  <% end %>
</div>

<%= render "users/shared/links" %>

<%
=begin%>
 <div class="row">
    <form class="col s12">
      <div class="row">
        <div class="input-field col s6">
          <i class="material-icons prefix">account_circle</i>
          <input id="icon_prefix" type="text" class="validate">
          <label for="icon_prefix">First Name</label>
        </div>
        <div class="input-field col s6">
          <i class="material-icons prefix">phone</i>
          <input id="icon_telephone" type="tel" class="validate">
          <label for="icon_telephone">Telephone</label>
        </div>
      </div>
    </form>
  </div> 
<%
=end%>
