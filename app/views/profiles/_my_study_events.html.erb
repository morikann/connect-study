<div class="bookmark-event">
  <% @my_study_events.each do |study_event| %>
    <div class="col s12 l8 offset-l2" style="margin-bottom: 40px;">
      <%= link_to study_event_path(study_event), "data-turbolinks": false do %>
        <div class="card study-event-card">
          <div class="card-image">
            <%= image_tag study_event.image.url, class: 'study-event-img' %>
          </div>
          <div class="card-content-top">
            <div class="study-event-prefecture"><%= study_event.location.prefecture.name %></div>
            <div class="study-event-tags">
              <% study_event.tags.each do |tag| %>
                <div class="chip"><%= tag.name %></div>
              <% end %>
            </div>
          </div>
          <div class="card-title">
            <a>
              <%= study_event.name %>    
            </a>        
          </div>
          <div class="card-content">
              <%= truncate(study_event.description, length: 100) %>
          </div>
          <div class="card-action">
            <ul>
              <li><%= image_tag study_event.user.profile.avatar.url, class: 'circle-small-img' %></li>
              <li class="event-owner-name"><%= study_event.user.profile.username %></li>
              <% if @user == current_user %>
                <li>
                  <%= link_to edit_study_event_path(study_event), class: 'tooltipped btn-floating btn-small waves-effect waves-light', id: 'edit-study-event', "data-turbolinks": false, data: { position: 'top', tooltip: '編集' } do %>
                    <i class="far fa-edit"></i>
                  <% end %>

                  <%= link_to study_event_path(study_event), method: :delete, class: 'tooltipped btn-floating btn-small waves-effect waves-light red', id: 'delete-study-event', "data-turbolinks": false, data: { position: 'top', tooltip: '削除', confirm: "勉強会を削除します。よろしいですか？" } do %>
                    <i class="far fa-trash-alt"></i>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>