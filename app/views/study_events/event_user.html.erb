<%= render 'shared/title', title: '勉強会作成' %>

<div class="step-wrapper">  
  <div class="stepbar-row">
    <ol class="stepbar">
      <li class="done"><span>1</span></li>
      <li class="done"><span>2</span></li>
      <li class="done"><span>3</span></li>
      <li><span>4</span></li>
    </ol>
  </div>
</div>

<div class="card-panel profile-card">
  <div class="center-align"><span class="essential">※</span>必須項目ではありません</div>
  <div class="row">
  
    <%= form_with url: step3_url, local: true do |f| %>
      <div class="input-field col s12">
        <div>
          <%= f.collection_check_boxes :user_id, current_user.matchers_profile, :id, :username do |builder| %>
            <div>
              <%= builder.label do %>
                <%= builder.check_box %>
                <span>
                  <%= builder.text %>
                </span>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="center-align">
        <%= button_tag type: 'submit', name: :back, class: 'btn waves-effect waves-light back-btn-color' do %>
          戻る
          <i class="material-icons left">chevron_left</i>
        <% end %>
  
        <%= button_tag type: 'submit', class: 'btn waves-effect waves-light' do %>
          次へ
          <i class="material-icons right">chevron_right</i>
        <% end %>
      </div>

    <% end %>
  </div>
</div>

