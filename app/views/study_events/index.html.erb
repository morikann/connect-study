<%= render 'shared/title', title: '勉強会一覧' %>
          
<div class="row">
  <% @study_events.each do |study_event| %>
    <div class="col s12 m6">
      <%= link_to study_event_path(study_event), "data-turbolinks": false do %>
        <div class="card study-event-card">
          <div class="card-image">
            <%= image_tag study_event.image.url, class: 'study-event-img' %>
          </div>
          <div class="card-content-top">
            <div class="study-event-prefecture"><%= study_event.location.prefecture.name %></div>
            <div class="study-event-tags">
              <div class="chip">プログラミング</div>
              <div class="chip">Rails</div>
            </div>
          </div>
          <div class="card-title">
            <a>
              <%= study_event.name %>    
            </a>        
          </div>
          <div class="card-content">
              <%= truncate(study_event.description, length: 100) %>
          </div>
          <div class="card-action">
            <ul>
              <li><%= image_tag study_event.user.profile.avatar.url, class: 'circle-small-img' %></li>
              <li class="event-owner-name"><%= study_event.user.profile.username %></li>
              <li><i class="far fa-bookmark"></i></li>
            </ul>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<%= link_to step1_path, class: 'btn-floating tooltipped btn-large waves-effect waves-light red btn-fixed', data: { position: 'top', tooltip: '勉強会を作る' } do %>
  <i class="material-icons">add</i></a>
<% end %>
